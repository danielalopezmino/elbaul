                </li>
                <div class="login_buttons">
                  <% if usuario_signed_in? %>
                      <div class="login_button"><%= link_to 'Salir', destroy_usuario_session_path %></div>
                  <% else %>
                      <div class="login_button"><%= link_to 'Ingresar', new_usuario_session_path %></div>
                  <% end %>

                  <div class="clear"></div>
                </div>
                <div class="clear"></div>
              </ul>
            </li>
          </ul>
          </div>
          <div class="clear"></div>
        </div>
      </div>
    </div>
  </div>
</div>

