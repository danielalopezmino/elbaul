              <li> | </li>
              <% if usuario_signed_in? %>
                  <li style="font-size: smaller"><%= link_to 'Salir', destroy_usuario_session_path %></li>
              <% else %>
                  <li style="font-size: smaller"><%= link_to 'Ingresar', new_usuario_session_path %></li>
              <% end %>
              <div class="clear"></div>
            </ul>

            <script type="text/javascript" src="/js/responsive-nav.js"></script>
          </div>
          <div class="clear"></div>
        </div>
        <div class="header_right">
          <!-- start search-->
          <div class="search-box">
            <div id="sb-search" class="sb-search">
              <form action="/productos">
                <input class="sb-search-input" placeholder="Escriba su búsqueda" type="search" name="search" id="search">
                <input class="sb-search-submit" type="submit" value="">
